User Function zTCheckBox()
    Local oDlg1
    Local oCheck1
    Local oCheck2
    Local oButton1 
    Local oButton2
    Local oButton3
    
    Private lCheck1 := .F.
    Private lCheck2 := .F.

    oDlg1 := TDialog():New(0,0,500,500,'Painel de CheckBox',,,,,CLR_BLACK,CLR_WHITE,,,.T.)

    oButton1 := TButton():New(01, 01,"Mostar escolha",oDlg1,{ || CheckOptions()}, 60,15,,,.F.,.T.,.F.,,.F.,,,.F. )

    oCheck1 := TCheckBox():New(20,01,'CheckBox 001',{ || lCheck1},oDlg1,100,210,,{ || lCheck1 := !lCheck1, IIF(lCheck1, MsgInfo("Está MARCADO", "Status"), MsgInfo("Está DESMARCADO","Status"))},,,,,,.T.,,,)

    oCheck2 := TCheckBox():New(30,01,'CheckBox 002',,oDlg1,100,210,,,,,,,,.T.,,,)
    oCheck2:bSetGet   := { || lCheck2}
    oCheck2:bLClicked := { || lCheck2 := !lCheck2, IIF(lCheck2 =.T. , MsgInfo("Está MARCADO", "Status"), MsgInfo("Está DESMARCADO","Status"))}

    oButton2 := TButton():New(40, 01,"Marcar Todos",oDlg1,{ || Marcartodos()}, 60,15,,,.F.,.T.,.F.,,.F.,,,.F. )
    oButton3 := TButton():New(40, 65,"Desmarcar Todos",oDlg1,{ || Desmarcartodos()}, 60,15,,,.F.,.T.,.F.,,.F.,,,.F. )


    oDlg1:Activate(,,,.T.)
Return


